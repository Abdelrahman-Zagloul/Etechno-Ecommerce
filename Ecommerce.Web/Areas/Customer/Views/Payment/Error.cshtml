@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-danger text-center shadow-lg p-4 rounded">
                <h2 class="mb-3">Oops! Something went wrong.</h2>
                <p class="lead">An unexpected error occurred while processing your request."</p>
                <a asp-action="Summary" asp-controller="Cart" asp-area="Customer" class="btn btn-outline-danger mt-3">Go Back</a>
            </div>
        </div>
    </div>
</div>

